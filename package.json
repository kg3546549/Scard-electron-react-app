{
  "name": "winscard-pcsc-client",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@chakra-ui/icons": "^2.2.4",
    "@chakra-ui/react": "2",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@scard/protocols": "file:./Protocols",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^13.0.0",
    "@testing-library/user-event": "^13.2.1",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.7.13",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "customize-cra": "^1.0.0",
    "electron-reload": "^2.0.0-alpha.1",
    "electron-window-state": "^5.0.3",
    "framer-motion": "^11.18.1",
    "react": "^19.0.0",
    "react-app-rewired": "^2.2.1",
    "react-devtools": "^6.1.1",
    "react-dom": "^19.0.0",
    "react-icons": "^5.4.0",
    "react-router-dom": "^7.1.3",
    "react-scripts": "5.0.1",
    "reactflow": "^11.11.4",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "typescript": "^4.4.2",
    "uuid": "^11.0.5",
    "web-vitals": "^2.1.0",
    "zustand": "^5.0.3"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "react-start": "cross-env BROWSER=none react-scripts start",
    "electron-start": "cross-env ELECTRON_START_URL=http://localhost:3000 electron .",
    "dev": "concurrently \"yarn react-start\" \"wait-on http://localhost:3000 && yarn electron-start\" -n \"REACT,ELECTRON\" -c \"blue,green\"",
    "build:react": "react-scripts build",
    "build:electron": "electron-builder build -c.extraMetadata.main=build/Main.js",
    "build:exe": "yarn build:react && electron-builder build --win --x64 -c.extraMetadata.main=build/Main.js",
    "build:installer": "yarn build:react && electron-builder build --win --x64 -c.extraMetadata.main=build/Main.js -c.nsis.oneClick=false",
    "build:all": "yarn build:react && electron-builder build --win --x64 -c.extraMetadata.main=build/Main.js -c.nsis.oneClick=false",
    "remove-protocols": "yarn remove @scard/protocols",
    "add-protocols": "yarn add file:./Protocols"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "main": "public/Main.js",
  "homepage": "./",
  "build": {
    "appId": "com.scard.pcsc-client",
    "productName": "CARD Tools",
    "directories": {
      "buildResources": "public",
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "public/Main.js",
      "node_modules/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "CARD Tools"
    }
  },
  "devDependencies": {
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^34.0.0",
    "electron-builder": "^25.1.8",
    "wait-on": "^9.0.3"
  }
}
